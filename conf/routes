# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
#LOGIN
POST          /api/login                                controllers.AuthController.login

#VIEWS
GET           /api/view2                                controllers.ViewsController.loadView2

#MOVEMENTS
GET           /api/movements/office/:officeId           controllers.UsersController.loadMovementsByOffice(officeId)
GET           /api/movements/numTram/:numTram           controllers.UsersController.loadMovementsByTramNum(numTram)
GET           /api/movements/currentDate                controllers.UsersController.loadMovementsByCurrentDate
PUT           /api/movements                            controllers.UsersController.updateDocumentConfirm
DELETE        /api/movements                            controllers.UsersController.deleteMovements
POST          /api/movements/:userId                    controllers.ViewsController.insertFromView2(userId)

#TYPEDOCUMENTS
GET           /api/typeDocuments                        controllers.TypeDocumentController.getTypeDocuments

#DOCUMENT INTERN
POST          /api/documentIntern/office/:officeId/user/:userId   controllers.DocumentInternController.createDocumentCircular(officeId,userId)
#INITIAL
GET            /api/initialState                        controllers.HomeController.initialState

GET           /                                         controllers.HomeController.index(path = "home")
GET           /*path                                    controllers.HomeController.index(path)

GET           /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)

